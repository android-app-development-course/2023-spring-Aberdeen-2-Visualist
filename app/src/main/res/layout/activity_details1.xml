<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbar"
            app:title="镜头A"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                android:id="@+id/ImageView"
                android:src="@drawable/camera2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:fitsSystemWindows="true"
                app:layout_collapseMode="parallax" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="68dp"
                android:layout_height="50dp"
                app:contentInsetLeft="0dp"
                app:contentInsetStart="0dp"
                app:contentInsetStartWithNavigation="0dp"
                />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="35dp"
                app:cardCornerRadius="4dp">

                <TextView
                    android:id="@+id/titleText"
                    android:text="你说得对，但是《镜头A》是由佳能自主研
发的一款全新科幻类冒险镜头。镜头发生在
一个被称作「佳能」的幻想公司，在这里，
被公司选中的人将被授予「摄影师」，导引
摄影之力。你将扮演一位名为「孙笑川的
神秘角色，在自由的旅行中邂逅性格各异、
能力独特的同伴们，和他们一起击败强
敌
同时，逐步发掘「摄影」的真相。"
                    android:textSize="20dp"
                    android:textColor="#FF101010"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp" />

            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

    <!--            +购物车/直接购买按钮-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|bottom">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/addCart"
                style="@style/RoundedButtonGray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="+购物车"
                app:backgroundTint="@color/gray" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buyDirectly"
                style="@style/RoundedButtonGray"
                android:layout_width="191dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="直接购买"
                app:backgroundTint="@color/black" />

        </LinearLayout>


    </FrameLayout>

<!--    +购物车/直接购买操作完成后显示标识-->
    <!-- Snackbar 容器 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <!-- 这里将显示添加成功的标识 -->
        <ImageView
            android:id="@+id/successAddImageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:visibility="invisible"
            android:src="@drawable/finishadding"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 这里将显示购买成功的标识 -->
        <ImageView
            android:id="@+id/successBuyImageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:visibility="invisible"
            android:src="@drawable/finishbuying"/>

    </FrameLayout>



</androidx.coordinatorlayout.widget.CoordinatorLayout>

